{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a href="{{ 'src/Controller/AbilityController.php'|file_link(0) }}">src/Controller/AbilityController.php</a></code>
            </li>
            <li>Your template at <code><a href="{{ 'templates/ability/index.html.twig'|file_link(0) }}">templates/ability/index.html.twig</a></code>
            </li>
        </ul>


        <div>

            {{ form_start(form) }}
            {# render the task's only field: description #}

            <h3>Abilities</h3>

            {# iterate over each existing tag and render its only field: name #}
            {% for ability in form.abilities %}
                <ul class="abl">
                    <li>{{ form_row(ability.name) }}</li>
                    <li>{{ form_row(ability.reloadTime) }}</li>
                </ul>

            {% endfor %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
